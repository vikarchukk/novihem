<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=86400" # 1 день в секундах
</FilesMatch>

<FilesMatch "\.(jpeg|jpg)$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>

<FilesMatch "\.png$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>

<FilesMatch "\.ttf$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>

<FilesMatch "\.js$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>